<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Example"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/state_uni"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="times"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/since_year"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingTop="10dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@color/about_us"
            android:drawableTop="@drawable/museum"
            android:text="About Us"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnEvents"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingTop="10dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:text="Events"
            android:drawableTop="@drawable/events"
            android:background="@color/events"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnCurriculum"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingTop="10dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@color/curriculum"
            android:drawableTop="@drawable/clock"
            android:text="Curriculum"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnNews"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingTop="10dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@color/news"
            android:drawableTop="@drawable/news"
            android:text="News"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/buttonSports"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingTop="10dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:text="Sports"
            android:background="@color/sports"
            android:drawableTop="@drawable/sports"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonContacts"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:paddingTop="10dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@color/contacts"
            android:drawableTop="@drawable/contacts"
            android:text="Contacts"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/imgbtnFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/facebook"
            android:backgroundTint="@color/facebook"/>

        <ImageButton
            android:id="@+id/imgbtnTwitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/twitter"
            android:backgroundTint="@color/twitter"/>
    </LinearLayout>

</LinearLayout>